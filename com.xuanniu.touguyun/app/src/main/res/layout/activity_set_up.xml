<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:background="@color/white_F7FAFD"
    >
    <com.touguyun.view.TitleBar_
        android:id="@id/touguyun_titleBar"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/white"
        app:textColor="@color/black_232323"
        app:leftIcon="@drawable/back_icon_black"
        app:bartitle="@string/set_up_title"
        />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                >
                <TextView
                    android:id="@+id/set_up_user_header_layout"
                    android:layout_width="match_parent"
                    android:layout_height="73dp"
                    android:paddingLeft="23dp"
                    android:paddingRight="23dp"
                    android:textSize="@dimen/sp_16"
                    android:textColor="@color/black_323232"
                    android:gravity="left|center_vertical"
                    android:drawableRight="@drawable/next_page_gray"
                    android:background="@drawable/list_item_selector_bg"
                    android:text="头像"
                    />
                <com.touguyun.view.CircleImageView
                    android:id="@+id/set_up_user_header"
                    android:layout_width="53dp"
                    android:layout_height="53dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="40dp"
                    android:src="@drawable/default_header"
                    />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="22dp"
                    android:background="@color/white"
                    >
                    <TextView
                        android:id="@+id/set_up_user_name_layout"
                        android:layout_width="match_parent"
                        android:layout_height="49dp"
                        android:paddingLeft="23dp"
                        android:paddingRight="23dp"
                        android:drawableRight="@drawable/next_page_gray"
                        android:textSize="@dimen/sp_16"
                        android:textColor="@color/black_323232"
                        android:gravity="left|center_vertical"
                        android:background="@drawable/list_item_selector_bg"
                        android:text="名字"
                        />
                    <TextView
                        android:id="@+id/set_up_user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="42dp"
                        android:textSize="@dimen/sp_16"
                        android:textColor="@color/black_323232"
                        android:text="赵小花"
                        />
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="11dp"
                    android:layout_marginRight="11dp"
                    android:background="@color/gray_D8D8D8"
                    />
                <TextView
                    android:id="@+id/set_up_change_pass"
                    android:layout_width="match_parent"
                    android:layout_height="49dp"
                    android:paddingLeft="23dp"
                    android:paddingRight="23dp"
                    android:drawableRight="@drawable/next_page_gray"
                    android:textSize="@dimen/sp_16"
                    android:textColor="@color/black_323232"
                    android:gravity="left|center_vertical"
                    android:background="@drawable/list_item_selector_bg"
                    android:text="重置密码"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="11dp"
                    android:layout_marginRight="11dp"
                    android:background="@color/gray_D8D8D8"
                    />
                <TextView
                    android:id="@+id/set_up_feedback"
                    android:layout_width="match_parent"
                    android:layout_height="49dp"
                    android:paddingLeft="23dp"
                    android:paddingRight="23dp"
                    android:drawableRight="@drawable/next_page_gray"
                    android:background="@drawable/list_item_selector_bg"
                    android:textSize="@dimen/sp_16"
                    android:textColor="@color/black_323232"
                    android:gravity="left|center_vertical"
                    android:text="意见反馈"
                    />
                <TextView
                    android:id="@+id/set_up_about_us"
                    android:layout_width="match_parent"
                    android:layout_height="49dp"
                    android:paddingLeft="23dp"
                    android:paddingRight="23dp"
                    android:layout_marginTop="22dp"
                    android:drawableRight="@drawable/next_page_gray"
                    android:textSize="@dimen/sp_16"
                    android:background="@drawable/list_item_selector_bg"
                    android:textColor="@color/black_323232"
                    android:gravity="left|center_vertical"
                    android:text="关于我们"
                    />
                <TextView
                    android:id="@+id/set_up_logout"
                    android:layout_width="match_parent"
                    android:layout_height="49dp"
                    android:paddingLeft="23dp"
                    android:paddingRight="23dp"
                    android:layout_marginTop="22dp"
                    android:textSize="@dimen/sp_16"
                    android:background="@drawable/list_item_selector_bg"
                    android:textColor="@color/black_323232"
                    android:gravity="center"
                    android:text="退出登录"
                    />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
