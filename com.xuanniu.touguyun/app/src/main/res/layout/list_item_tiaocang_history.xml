<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="46dp">
    <com.touguyun.view.CircleAngleTitleView
        android:id="@id/item_icon"
        android:layout_width="23dp"
        android:layout_height="23dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"
        app:backColor="@color/red_FD4E4E"
        app:frameColor="@color/red_FD4E4E"
        android:textColor="@color/white"
        android:gravity="center"
        android:text="ä¹°"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="16dp"
        android:orientation="horizontal"
        android:gravity="center"
        >
        <TextView
            android:id="@id/item_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/black_323232"
            android:gravity="left|center_vertical"
            android:text="20150826"
            />
        <TextView
            android:id="@id/item_buy_price"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/black_323232"
            android:gravity="right|center_vertical"
            android:text="125.39"
            />
        <TextView
            android:id="@id/item_count"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/black_323232"
            android:gravity="right|center_vertical"
            android:text="1000000"
            />
        <TextView
            android:id="@id/item_turn_volume"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/black_323232"
            android:gravity="right|center_vertical"
            android:text="199910.00"
            />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_c8c8c8"
        android:layout_alignParentBottom="true"
        />
</RelativeLayout>