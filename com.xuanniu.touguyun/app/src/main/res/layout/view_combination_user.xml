<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:background="#bb000000"
        android:layout_alignParentBottom="true">

        <com.touguyun.view.CircleImageView
            android:id="@+id/comb_user_header"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="23dp"
            android:layout_centerVertical="true"
            />
        <TextView
            android:id="@+id/comb_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/comb_user_header"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="27dp"
            android:drawablePadding="6dp"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/white"
            />
        <TextView
            android:id="@+id/comb_user_historically_returned"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/comb_user_name"
            android:layout_alignTop="@+id/comb_user_name"
            android:layout_alignBottom="@+id/comb_user_name"
            android:layout_marginLeft="10dp"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/white"
            />
        <TextView
            android:id="@+id/comb_user_create_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/comb_user_header"
            android:layout_marginTop="51dp"
            android:layout_marginLeft="16dp"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/white"
            />
    </RelativeLayout>
    <com.touguyun.view.CircleAngleTitleView
        android:id="@+id/comb_user_unSubscribe"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="26dp"
        android:layout_marginRight="23dp"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_13"
        android:gravity="center"
        android:text="+ 订阅"
        app:backColor="@color/red_FD4E4E"
        app:frameColor="@color/red_FD4E4E"
        app:frameWidth="1.5dp"
        android:visibility="gone"
        />
    <com.touguyun.view.CircleAngleTitleView
        android:id="@+id/comb_user_subscribe"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="26dp"
        android:layout_marginRight="23dp"
        app:frameColor="@color/gray_c8c8c8"
        app:backColor="@color/gray_c8c8c8"
        android:textColor="@color/black_323232"
        android:textSize="@dimen/sp_12"
        android:gravity="center"
        android:text="已订阅"
        android:visibility="gone"
        />
</RelativeLayout>
