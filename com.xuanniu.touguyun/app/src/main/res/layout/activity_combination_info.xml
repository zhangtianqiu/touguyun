<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                >
    <com.touguyun.view.TitleBar_
        android:id="@id/touguyun_titleBar"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        app:leftIcon="@drawable/back_icon_black"
        app:textColor="@color/black_232323"
        app:bartitle="@string/combination_info_title"
        app:rightIcon="@drawable/title_share_icon"
        />

    <com.handmark.pulltorefresh.library.PullToRefreshListView
        android:id="@id/refresh_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:showDividers="none"
        android:fadingEdge="none"
        android:divider="@android:color/transparent"
        android:dividerPadding="@dimen/dp_0"
        android:layout_marginTop="45dp"
        android:layout_marginBottom="75dp"
        
        />
    <com.touguyun.view.CircleAngleTitleView
        android:id="@+id/comb_info_comment_bt"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_16"
        android:text="@string/combination_info_comment_bt"
        android:gravity="center"
        app:backColor="@color/red_FB3636"
        app:frameColor="@color/red_FB3636"
        />
    <include layout="@layout/view_error_data"/>
</RelativeLayout>
