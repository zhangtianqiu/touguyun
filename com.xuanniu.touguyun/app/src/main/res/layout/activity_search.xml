<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"

            >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <EditText
            android:id="@+id/search_edit_txt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="23dp"
            android:layout_marginRight="80dp"
            android:background="@color/white"
            android:gravity="left|center_vertical"
            android:drawableLeft="@drawable/search_gray_icon"
            android:drawablePadding="11dp"
            android:textSize="@dimen/sp_16"
            android:textColorHint="@color/gray_969696"
            android:textColor="@color/black_232323"
            android:imeOptions="actionSearch"
            android:singleLine="true"
            android:hint="搜索"
            />
        <ImageView
            android:id="@+id/search_edit_del"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/text_del_gray_icon"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="57dp"
            android:visibility="gone"
            />
        <TextView
            android:id="@+id/search_cancel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingRight="15dp"
            android:textColor="@color/black_232323"
            android:textSize="@dimen/sp_16"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="取消"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_DBDBDB"
            android:layout_alignParentBottom="true"
            />
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/search_history"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray_c8c8c8"
                android:textSize="@dimen/sp_13"
                android:layout_marginLeft="23dp"
                android:layout_marginTop="17dp"
                android:text="近期搜索"
                />
            <LinearLayout
                android:id="@+id/search_history_items"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                />
            <TextView
                android:id="@+id/search_history_clear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="11dp"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/gray_969696"
                android:gravity="center"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:text="清空搜索历史"
                />
        </LinearLayout>
</LinearLayout>