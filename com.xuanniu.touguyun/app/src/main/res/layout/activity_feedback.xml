<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:background="@color/white_F7FAFD"
    >
    <com.touguyun.view.TitleBar_
        android:id="@id/touguyun_titleBar"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/white"
        app:textColor="@color/black_232323"
        app:bartitle="@string/feedback_title"
        app:leftIcon="@drawable/back_icon_black"
        />
    <EditText
        android:id="@+id/feedback_txt"
        android:layout_width="match_parent"
        android:layout_height="233dp"
        android:layout_marginTop="22dp"
        android:paddingLeft="23dp"
        android:paddingTop="16dp"
        android:paddingRight="23dp"
        android:paddingBottom="16dp"
        android:hint="请填写您对投顾云的意见吧~"
        android:textSize="@dimen/sp_16"
        android:textColorHint="@color/gray_969696"
        android:textColor="@color/black_323232"
        android:gravity="left|top"
        android:maxLength="256"
        android:lineSpacingExtra="4dp"
        android:background="@color/white"
        />
    
    <com.touguyun.view.CircleAngleTitleView
        android:id="@+id/feedback_button"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="16dp"
        app:backColor="@color/red_EB7D8C"
        app:frameColor="@color/red_EB7D8C"
        app:radiusOfCorner="@dimen/dp_3"
        android:gravity="center"
        android:textSize="@dimen/sp_17"
        android:textColor="@color/white"
        android:text="提交"
        />



</LinearLayout>
