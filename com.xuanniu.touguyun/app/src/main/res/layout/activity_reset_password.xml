<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white_F7FAFD"
    >
        <com.touguyun.view.TitleBar_
            android:id="@id/touguyun_titleBar"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/white"
            app:textColor="@color/black_232323"
            app:bartitle="@string/reset_password_title"
            app:leftIcon="@drawable/back_icon_black"
            app:rightText="@string/save"
            app:rightColor="@color/red_FD4E4E"
            />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="22dp">
        <EditText
            android:id="@+id/reset_pass_old_txt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:paddingLeft="23dp"
            android:paddingRight="80dp"
            android:layout_gravity="left|center_vertical"
            android:singleLine="true"
            android:textSize="@dimen/sp_16"
            android:maxLength="18"
            android:textColorHint="@color/gray_969696"
            android:textColor="@color/black_323232"
            android:inputType="textPassword"
            android:hint="当前密码"
            />
        <ImageView
            android:id="@+id/reset_pass_old_clear"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="10dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/text_del_gray_icon"
            android:layout_marginLeft="34dp"
            android:visibility="gone"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="11dp"
            android:layout_marginRight="11dp"
            android:background="@color/gray_D8D8D8"
            android:layout_alignParentBottom="true"
            />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">
        <EditText
            android:id="@+id/reset_pass_new_txt"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:paddingLeft="23dp"
            android:paddingRight="23dp"
            android:singleLine="true"
            android:layout_gravity="left|center_vertical"
            android:textSize="@dimen/sp_16"
            android:maxLength="18"
            android:textColorHint="@color/gray_969696"
            android:textColor="@color/black_323232"
            android:inputType="textPassword"
            android:hint="新密码"
            />
            <ImageView
                android:id="@+id/reset_pass_new_clear"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="10dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/text_del_gray_icon"
                android:layout_marginLeft="34dp"
                android:visibility="gone"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="11dp"
            android:layout_marginRight="11dp"
            android:background="@color/gray_D8D8D8"
            android:layout_alignParentBottom="true"
            />
        </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <EditText
            android:id="@+id/reset_pass_new_again_txt"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:paddingLeft="23dp"
            android:paddingRight="23dp"
            android:singleLine="true"
            android:layout_gravity="left|center_vertical"
            android:textSize="@dimen/sp_16"
            android:maxLength="18"
            android:textColorHint="@color/gray_969696"
            android:textColor="@color/black_323232"
            android:inputType="textPassword"
            android:hint="确认新密码"
            />
        <ImageView
            android:id="@+id/reset_pass_new_again_clear"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="10dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/text_del_gray_icon"
            android:layout_marginLeft="34dp"
            android:visibility="gone"
            />
    </RelativeLayout>
</LinearLayout>