<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
    >
    <com.touguyun.view.TitleBar_
        android:id="@id/touguyun_titleBar"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        app:textColor="@color/black_232323"
        app:bartitle="@string/recommend_title"
        app:rightText="@string/jump"
        />

    <com.handmark.pulltorefresh.library.PullToRefreshListView
        android:id="@id/refresh_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="46dp"
        android:layout_marginBottom="60dp"
        android:showDividers="none"
        android:fadingEdge="none"
        android:dividerPadding="@dimen/dp_0"
        />
    <Button
        android:id="@+id/recomment_button"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="11dp"
        android:layout_marginRight="11dp"
        android:layout_marginBottom="9dp"
        android:background="@color/red_FD4E4E"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_20"
        android:gravity="center"
        android:text="一键关注"
        />

    <include layout="@layout/view_error_data"/>
</RelativeLayout>