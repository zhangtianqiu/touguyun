<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <include layout="@layout/view_error_data"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:background="@color/white_F3F3F3"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="17dp"
            android:layout_marginLeft="58dp"
            android:textColor="@color/gray_989898"
            android:textSize="@dimen/sp_16"
            android:text="起始日期"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="17dp"
            android:layout_marginRight="58dp"
            android:layout_alignParentRight="true"
            android:textColor="@color/gray_989898"
            android:textSize="@dimen/sp_16"
            android:text="截止日期"
            />
        <TextView
            android:id="@+id/tiaocang_history_start_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="44dp"
            android:layout_marginLeft="46dp"
            android:textColor="@color/black_323232"
            android:textSize="@dimen/sp_17"
            android:text="2015-08-20"
            />
        <TextView
            android:id="@+id/tiaocang_history_end_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="44dp"
            android:layout_marginRight="46dp"
            android:layout_alignParentRight="true"
            android:textColor="@color/black_323232"
            android:textSize="@dimen/sp_17"
            android:text="2015-08-27"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_c1c1c1"
            android:layout_marginTop="23dp"
            android:layout_toRightOf="@+id/tiaocang_history_start_date"
            android:layout_toLeftOf="@+id/tiaocang_history_end_date"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="16dp"
            android:orientation="horizontal"
            android:gravity="center"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/black_323232"
                android:gravity="left|center_vertical"
                android:text="成交时间"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/black_323232"
                android:gravity="right|center_vertical"
                android:text="成交价"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/black_323232"
                android:gravity="right|center_vertical"
                android:text="成交量"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/black_323232"
                android:gravity="right|center_vertical"
                android:text="成交额"
                />

            </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/gray_c8c8c8"
            />
    <com.handmark.pulltorefresh.library.PullToRefreshListView
        android:id="@id/refresh_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:showDividers="none"
        android:fadingEdge="none"
        android:dividerPadding="@dimen/dp_0"
        />
</LinearLayout>