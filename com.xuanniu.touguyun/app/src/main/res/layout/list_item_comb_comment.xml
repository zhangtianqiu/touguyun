<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
      
    <com.touguyun.view.CircleImageView
        android:id="@id/item_header"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="23dp"
        android:src="@drawable/default_header"
        />
    <TextView
        android:id="@id/item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="180dp"
        android:layout_alignTop="@id/item_header"
        android:layout_alignBottom="@id/item_header"
        android:layout_toRightOf="@id/item_header"
        android:gravity="left|center_vertical"
        android:layout_marginLeft="10dp"
        android:singleLine="true"
        android:ellipsize="end"
        android:textSize="@dimen/sp_14"
        android:textColor="@color/black_323232"
        android:text="赵阿明"
        />
    <TextView
        android:id="@id/item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/item_header"
        android:layout_alignBottom="@id/item_header"
        android:layout_alignParentRight="true"
        android:layout_marginRight="23dp"
        android:gravity="right|center"
        android:singleLine="true"
        android:ellipsize="end"
        android:textColor="@color/gray_A4A4A4"
        android:textSize="@dimen/sp_12"
        android:text="08-18 17：30"
        />
    <TextView
        android:id="@id/item_context"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_header"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="23dp"
        android:layout_marginRight="23dp"
        android:textSize="@dimen/sp_13"
        android:textColor="@color/black_454545"
        android:text="老师高见啊～！"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/item_context"
        android:background="@color/gray_e5e5e5"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="23dp"
        android:layout_marginRight="23dp"
        />
</RelativeLayout>
