<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <com.touguyun.view.TitleBar_
        android:id="@id/touguyun_titleBar"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        app:textColor="@color/black_232323"
        app:bartitle="@string/reset_password_title"
        app:leftIcon="@drawable/back_icon_black"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="43dp"
        android:textSize="@dimen/sp_16"
        android:textColor="@color/black_323232"
        android:text="验证码已发送至"
        />
    <TextView
        android:id="@+id/forgot_pass_two_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:textSize="@dimen/sp_16"
        android:textColor="@color/black_323232"
        android:text="18300000000"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="44dp"
        android:layout_marginLeft="23dp"
        android:layout_marginRight="23dp"
        >
        <EditText
            android:id="@+id/forgot_pass_code_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@android:color/transparent"
            android:hint="请输入验证码"
            android:gravity="center"
            android:textColor="@color/black_323232"
            android:textColorHint="@color/gray_969696"
            android:textSize="@dimen/sp_16"
            android:inputType="phone"
            android:maxLength="6"
            />
        <ImageView
            android:id="@+id/forgot_pass_code_txt_clear"
            android:layout_width="15dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/text_del_gray_icon"
            android:visibility="gone"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="6dp"
            android:background="@color/gray_969696"
            />
    </RelativeLayout>

    <com.touguyun.view.CircleAngleTitleView
        android:id="@+id/forgot_pass_two_next"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_marginTop="33dp"
        android:layout_marginLeft="23dp"
        android:layout_marginRight="23dp"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_16"
        android:text="@string/register_next"
        app:backColor="@color/red_EB7D8C"
        app:radiusOfCorner="3dp"
        app:frameColor="@color/red_EB7D8C"
        />
    <TextView
        android:id="@+id/forgot_pass_code_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textSize="@dimen/sp_14"
        android:textColor="@color/black_323232"
        android:layout_marginTop="13dp"
        android:text="59秒后重新发送"
        />
</LinearLayout>