<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
      <com.touguyun.view.TitleBar_
          android:id="@id/touguyun_titleBar"
          android:layout_width="match_parent"
          android:layout_height="45dp"
          app:bartitle="@string/zuhe_create_title"
          app:textColor="@color/black_232323"
          app:leftIcon="@drawable/back_icon_black"
          app:rightText="@string/next_step"
          app:rightColor="@color/gray_969696"
          />
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="right"
          android:layout_marginTop="13dp"
          android:layout_marginRight="23dp"
          android:text="2/3步"
          android:textSize="@dimen/sp_14"
          android:textColor="@color/black_323232"
          />

        <EditText
            android:id="@+id/create_zuhe_info_txt"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginLeft="23dp"
            android:layout_marginRight="23dp"
            android:padding="13.3dp"
            android:background="@drawable/solid_gray_969696"
            android:layout_marginTop="20dp"
            android:gravity="left|top"
            android:hint="请输入组合简介…"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/black_323232"
            android:lineSpacingExtra="3dp"
            />
</LinearLayout>