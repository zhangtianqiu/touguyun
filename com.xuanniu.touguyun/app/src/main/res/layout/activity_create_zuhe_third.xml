<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
    android:background="@color/white">
      <com.touguyun.view.TitleBar_
          android:id="@id/touguyun_titleBar"
          android:layout_width="match_parent"
          android:layout_height="45dp"
          app:bartitle="@string/add_gupiao_title"
          app:textColor="@color/black_232323"
          app:leftIcon="@drawable/back_icon_black"
          app:rightText="@string/finish"
          app:rightColor="@color/gray_969696"
          />
      <View
          android:id="@+id/create_zuhe_third_space"
          android:layout_width="match_parent"
          android:layout_height="65dp"
          android:background="@android:color/transparent"
          />
      <RelativeLayout
          android:id="@+id/create_zuhe_third_add_gupiao"
          android:layout_width="match_parent"
          android:layout_height="46dp"
          android:layout_marginTop="23dp"
          android:layout_marginLeft="23dp"
          android:layout_marginRight="23dp"
          >
          <com.touguyun.view.CircleAngleTitleView
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              app:radiusOfCorner="4dp"
              app:backColor="@color/red_FD4E4E"
              app:frameColor="@color/red_FD4E4E"
                />
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="match_parent"
              android:textColor="@color/white"
              android:textSize="@dimen/sp_16"
              android:layout_centerInParent="true"
              android:gravity="center"
              android:text="添加股票"
              android:drawableLeft="@drawable/add_white_icon"
              android:drawablePadding="10dp"
              />
          </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="23dp"
        >
        <ScrollView
            android:id="@+id/create_zuhe_third_gupiao_ScrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="46dp"
            />
        <RelativeLayout
            android:id="@+id/create_zuhe_bottom_tools_layout"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:background="@color/red_FE7272"
            android:layout_alignParentBottom="true"
            android:visibility="gone"
            >
            <ProgressBar
                android:id="@+id/create_zuhe_bottom_tools_progressbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:max="10000"
                android:progress="10000"
                android:progressDrawable="@drawable/progress_zuhe_bg"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="23dp"
                android:textSize="@dimen/sp_17"
                android:textColor="@color/white"
                android:text="现金"
                />
            <TextView
                android:id="@+id/create_zuhe_bottom_tools_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_17"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="23dp"
                android:text="100%"
                />
            </RelativeLayout>


    </RelativeLayout>

</LinearLayout>