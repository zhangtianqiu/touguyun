<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:background="@color/white"
    >
    <com.touguyun.view.TitleBar_
        android:id="@id/touguyun_titleBar"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        app:bartitle="@string/my_guandian_title"
        app:textColor="@color/black_232323"
        app:leftIcon="@drawable/back_icon_black"
        app:rightText="@string/finish"
        />
    <com.touguyun.view.MainTopToolsView
        android:id="@id/touguyun_main_top_tools"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:background="@color/white_F7FAFD"
        android:paddingLeft="11dp"
        android:paddingRight="11dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:visibility="gone"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="23dp"
        android:layout_marginLeft="23dp"
        android:layout_marginRight="23dp"
        android:orientation="horizontal"
        android:background="@drawable/solid_gray_969696"
        >
        <TextView
            android:id="@+id/create_guandian_choose_topic"
            android:layout_width="133dp"
            android:layout_height="match_parent"
            android:background="@color/blue_5f9af8"
            android:gravity="center"
            android:textSize="@dimen/sp_16"
            android:singleLine="true"
            android:ellipsize="middle"
            android:textColor="@color/white"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="#选择话题#"
            />
        <EditText
            android:id="@+id/create_guandian_edit_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:paddingTop="14dp"
            android:paddingLeft="13dp"
            android:paddingRight="13dp"
            android:paddingBottom="14dp"
            android:singleLine="true"
            android:gravity="left|center"
            android:textSize="@dimen/sp_16"
            android:textColorHint="@color/gray_c8c8c8"
            android:textColor="@color/black_323232"
            android:hint="请输入标题"
            android:tag="0"
            />

        </LinearLayout>
    
        <EditText
            android:id="@+id/create_guandian_edit_context"
            android:layout_width="match_parent"
            android:layout_height="233dp"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="23dp"
            android:layout_marginRight="23dp"
            android:background="@drawable/solid_gray_969696"
            android:paddingTop="14dp"
            android:paddingLeft="13dp"
            android:paddingRight="13dp"
            android:paddingBottom="14dp"
            android:gravity="left|top"
            android:textSize="@dimen/sp_16"
            android:textColorHint="@color/gray_c8c8c8"
            android:textColor="@color/black_323232"
            android:maxLength="140"
            android:hint="请输入观点内容"
            />

</LinearLayout>
