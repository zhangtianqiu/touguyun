<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="77dp">
    <ImageView
        android:id="@id/item_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/default_zuhe_icon"
        android:layout_centerVertical="true"
        android:layout_marginLeft="23dp"
        />
    <com.touguyun.view.CircleAngleTitleView
        android:id="@id/item_new_point"
        android:layout_width="13dp"
        android:layout_height="13dp"
        app:backColor="@color/red_ff3030"
        app:frameColor="@color/red_ff3030"
        android:layout_alignLeft="@id/item_icon"
        android:layout_alignBottom="@id/item_icon"
        android:layout_marginLeft="43dp"
        android:layout_marginBottom="43dp"
        android:visibility="visible"
        />
    <TextView
        android:id="@id/item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black_323232"
        android:textSize="16dp"
        android:text="组合异动"
        android:layout_toRightOf="@id/item_icon"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="18dp"
        />

    <TextView
        android:id="@id/item_context"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/item_icon"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="45dp"
        android:singleLine="true"
        android:layout_marginRight="65dp"
        android:ellipsize="end"
        android:textSize="@dimen/sp_13"
        android:textColor="@color/gray_989898"
        android:text="硅谷独角兽硅谷独角兽硅谷独角兽..."
        />
    <TextView
        android:id="@id/item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="18dp"
        android:layout_marginRight="23dp"
        android:text="15/08/21"
        />
</RelativeLayout>