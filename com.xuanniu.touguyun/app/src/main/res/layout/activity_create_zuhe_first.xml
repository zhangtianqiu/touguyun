<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
      <com.touguyun.view.TitleBar_
          android:id="@id/touguyun_titleBar"
          android:layout_width="match_parent"
          android:layout_height="45dp"
          app:bartitle="@string/zuhe_create_title"
          app:textColor="@color/black_232323"
          app:leftIcon="@drawable/back_icon_black"
          app:rightText="@string/next_step"
          app:rightColor="@color/gray_969696"
          />
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="right"
          android:layout_marginTop="13dp"
          android:layout_marginRight="23dp"
          android:text="1/3步"
          android:textSize="@dimen/sp_14"
          android:textColor="@color/black_323232"
          />

      <com.touguyun.view.CircleAngleTitleView
          android:id="@+id/create_zuhe_image_button"
          android:layout_width="86.7dp"
          android:layout_height="86.7dp"
          app:backColor="@color/gray_D8D8D8"
          app:frameColor="@color/gray_D8D8D8"
          app:radiusOfCorner="5dp"
          android:layout_gravity="center"
          android:layout_marginTop="24.3dp"
          android:textColor="@color/white"
          android:textSize="@dimen/sp_16"
          android:gravity="center"
          android:text="点击上传\n组合照片"
          android:lineSpacingExtra="5dp"
          android:visibility="visible"
          />
        <com.touguyun.view.RoundedCornersImage
            android:id="@+id/create_zuhe_image_view"
            android:layout_width="86.7dp"
            android:layout_height="86.7dp"
            app:backColor="@color/gray_D8D8D8"
            app:frameColor="@color/gray_D8D8D8"
            app:radiusOfCorner="5dp"
            android:layout_gravity="center"
            android:layout_marginTop="24.3dp"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_16"
            android:gravity="center"
            android:visibility="gone"
            />
        <EditText
            android:id="@+id/create_zuhe_name_txt"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@android:color/transparent"
            android:layout_gravity="center"
            android:layout_marginTop="46.7dp"
            android:gravity="center"
            android:singleLine="true"
            android:maxLength="8"
            android:hint="请输入组合名字"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/black_323232"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@color/gray_969696"
            />
</LinearLayout>